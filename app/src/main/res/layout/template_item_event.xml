<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llVideoItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            style="@style/ListItemClickable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivEventPoster"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:background="@color/colorBackground"
                    android:src="@drawable/wartajazz" />

                <TextView
                    android:textColor="@color/colorBackground"
                    android:drawableEnd="@drawable/ic_date_24dp"
                    android:drawablePadding="6dp"
                    android:id="@+id/tvEventDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="6dp"
                    android:textStyle="bold|italic"
                    android:text="20-Oct-2019\n30-Oct-2019" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvEventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="TitleTitleTitleTitleTitleTitleTitleTitleTitle"
                    android:maxLength="30"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/ic_location_24dp"
                    android:drawablePadding="6dp"
                    android:id="@+id/tvEventLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Title"
                    android:textColor="@android:color/black" />
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/ic_money_24dp"
                    android:drawablePadding="6dp"
                    android:id="@+id/tvEventPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Title"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
